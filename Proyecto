#ventana de Ingreso
ingreso = Tk()
user = StringVar()
password = StringVar()
ingreso.title("Compras rápidas")
ingreso.geometry("280x100")
Usuario = Label(ingreso,text="Usuario").place(x=10,y=10)
userbox = Entry(ingreso,textvariable=user).place(x=120, y=10)
Password = Label(ingreso,text="Contraseña").place(x=10,y=40)
passwordbox = Entry(ingreso,textvariable=password).place(x=120,y=40)
ingresar = Button(ingreso,text="Ingresar").place(x=120,y=70)
ingreso.mainloop()
